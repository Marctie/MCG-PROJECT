@page
@model MCG_PROJECT.Pages.SignUp.IndexModel
@{
}

  <style>
    body {
      background-color: #4c5c7f;
      padding: 20px;
    }

    .registration-form {
      max-width: 400px;
      background-color: #ffffff;
      border-radius: 5px;
      padding: 20px;
      margin: 0 auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .registration-form h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .registration-form input[type="text"],
    .registration-form input[type="email"],
    .registration-form input[type="password"],
    .registration-form input[type="date"],
    .registration-form input[type="number"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      border: 1px solid #cccccc;
    }

    .registration-form button {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      color: #ffffff;
      background-color: #3a73a6;
    }
  </style>
<body>
    <div style="text-align: center;">
        @*chiedere a massimiliano perchè il logo non viene visualizzato correttamente *@
            <img src="logo_header_mcg_con_scritta.png" alt="MCG" style="width: 150px; height:auto; margin: 20px 20px">
            <img src="MCG.png" alt="MCG" style="width: 150px; height:auto; margin: 20px 20px">
        </div>
  <div class="registration-form">
    <h2>Registrazione</h2>
    <form>
      <input type="text" placeholder="Codice fiscale" required>
      <input type="text" placeholder="Cognome" required>
      <input type="text" placeholder="Nome" required>
      <input type="date" placeholder="Data di nascita" required>
      <input type="text" placeholder="Luogo di nascita" required>
      <input type="text" placeholder="Indirizzo" required>
      <input type="text" placeholder="CAP" required>
      <input type="text" placeholder="Città" required>
      <input type="text" placeholder="Provincia" required>
      <input type="text" placeholder="Nazione" required>
      <input type="email" placeholder="Email" required>
      <input type="password" placeholder="Password" required>
      <button type="submit">Registrati</button>
    </form>
  </div>

  
</body>